<br><br>
<section class="container-fluid">
<table class="table table-bordered table-striped table-hover container-sm block ">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friend_profiles.each do |friend_profile| %>
      <tr>
        <td><%= friend_profile.first_name %></td>
        <td><%= friend_profile.last_name %></td>
        <td><%= friend_profile.email %></td>
        <td><%= friend_profile.contact %></td>
        <td><%= friend_profile.image %></td>
        <td><%= link_to 'Show', friend_profile %></td>
        <td><%= link_to 'Edit', edit_friend_profile_path(friend_profile) %></td>
        <td><%= link_to 'Delete', friend_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>
<br>

<%= link_to 'New Profile', new_friend_profile_path, class:"btn btn-dark" %>
